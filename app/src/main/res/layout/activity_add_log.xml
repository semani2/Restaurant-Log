<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sai.restaurantlog.add_log.AddLogActivity"
    android:padding="16dp"
    android:orientation="vertical">


    <EditText
        android:id="@+id/restaurant_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:hint="@string/str_restaurant_name"
        />

    <EditText
        android:id="@+id/restaurant_review_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="textMultiLine"
        android:hint="@string/str_review"
        android:minLines="3"
        android:maxLines="7"/>

    <RatingBar
        android:id="@+id/restaurant_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/save_button"
        android:text="@string/str_save"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"/>
</LinearLayout>
